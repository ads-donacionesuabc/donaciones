<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Busqueda">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0B1F02">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="544dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="166dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="0dp"
                        app:srcCompat="@drawable/boton_libros" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="19dp"
                        android:layout_marginRight="19dp"
                        app:srcCompat="@drawable/boton_ropa" />

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="29dp"
                        android:layout_marginRight="29dp"
                        android:layout_marginBottom="8dp"
                        app:srcCompat="@drawable/boton_utilesescolares" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="164dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        app:srcCompat="@drawable/boton_reciente" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/boton_aparatos" />

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="29dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="156dp"
                        android:layout_marginRight="156dp"
                        app:srcCompat="@drawable/boton_materiales" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton8"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginBottom="8dp"
                        app:srcCompat="@drawable/boton_solicitudes" />

                    <ImageButton
                        android:id="@+id/imageButton9"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp"
                        app:srcCompat="@drawable/boton_rifa" />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="153dp"
                        android:layout_marginRight="153dp"
                        android:layout_marginBottom="8dp"
                        app:srcCompat="@drawable/boton_campus" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>